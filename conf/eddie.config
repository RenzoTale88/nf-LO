/*
 * ------------------------------------------------------
 *  Based on the nf-core/rnaseq Nextflow base config file
 * ------------------------------------------------------
 */

executor{
  name = "uge"
  queueSize = 500
  cpu = 1
  memory = 8.GB
  time = 23.h
}

process {

  beforeScript = """
  . /etc/profile.d/modules.sh
  sleep 2;
  """
  module = 'singularity/3.5.3'
  penv = "sharedmem"

  cpus = 1
  memory = 8.GB
  time = 6.h
  clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"

  errorStrategy = { task.exitStatus in [143,137,104,134,139,140] ? 'retry' : 'terminate' }
  maxRetries = 5
  maxErrors = '-1'

  withLabel: small{
    cpus = 1
    memory = 4.GB
    time = 6.h
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withLabel: medium{
    cpus = 1
    memory = 16.GB
    time = 12.h
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withLabel: large{
    cpus = 1
    memory = 32.GB
    time = 23.h
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withLabel: small_multi{
    cpus = 4
    memory = 8.GB
    time = 2.h
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
}
