/*
 * ------------------------------------------------------
 *  Based on the nf-core/rnaseq Nextflow base config file
 * ------------------------------------------------------
 */

executor{
  name = "uge"
  queueSize = 500
  cpu = 1
  memory = 8.GB
  time = 23.h
}


singularity {
  enable=false
}

process {

  beforeScript = """
  . /etc/profile.d/modules.sh
  sleep 2;
  export PATH=$PATH:/exports/cmvm/eddie/eb/groups/prendergast_grp/Andrea/UCSC
  export PATH=$PATH:/exports/cmvm/eddie/eb/groups/prendergast_grp/Andrea/minimap2
  export PATH=$PATH:/exports/cmvm/eddie/eb/groups/prendergast_grp/Andrea/lastz-distrib-1.04.00/src
  """
  module = 'singularity/3.5.3'
  penv = "sharedmem"

  cpus = 1
  memory = 4.GB
  time = 4.h
  clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'terminate' }
  maxRetries = 5
  maxErrors = '-1'

  withName: make2bit{
    cpus = 1
    memory = 2.GB
    time = 3.h
  }
  withName: splitTgt{
    cpus = 1
    memory = 4.GB
    time = 2.h
  }
  withName: splitQry{
    cpus = 1
    memory = 4.GB
    time = 2.h
  }
  withName: pairs {
    cpus = 1
    memory = 8.GB
    time = 4.h
  }
  withName: align {
    cpus = 1
    memory = 8.GB
    time = { 23.h * task.attempt }
  }
  withName: singleaxt{
    cpus = 1
    memory = 8.GB
    time = 8.h
  }
  withName: axtchain {
    cpus = 1
    memory = 16.GB
    time = 6.h
  }
  withName: liftover {
    cpus = 1
    memory = 8.GB
    time = 12.h
  }

}

params {
  // Defaults only, expecting to be overwritten
  max_memory = 8.GB
  max_cpus = 1
  max_time = 23.h
}
